    <script>
   $(document).ready(function() {
  // Code to toggle profile popup when clicking profile name
  $(".profile-toggle").click(function() {
    $(".profile-popup").toggleClass("active");
  });

  // Code to close profile popup when clicking close button
  $(".profile-popup-close").click(function() {
    $(".profile-popup").removeClass("active");
  });
});

